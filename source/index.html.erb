<section id="calculator">
  <h1> Scientific Calculator </h1>

  <div id= "screen">
    <p> 0 </p>
  </div>
  <div id= "memory">
    <p> 0 </p>
  </div>
  <div id= "history">
    <p> Empty </p>
  </div>
  <div id= "buttons">
