<section id="calculator">
  <h1> Scientific Calculator </h1>

  <!-- author Yunfeng Wang-->
  <div class="main-grid">
    <div id="screen">
      <p>0</p>
    </div>

    <div id="memory-history">
      <div class="toggle-buttons">
        <button onclick="showMemory()">Memory</button>
        <button onclick="showHistory()">History</button>
      </div>
      <div id="memory" class="toggle-panel">
        <p>0</p>
      </div>
      <div id="history" class="toggle-panel hidden">
        <p>Empty</p>
      </div>
    </div>
  </div>

  <div id= "buttons">
    <div id= "memory_buttons">
      <p> MC  MR  M+  M-  MS </p>
    </div>
    <div id="operations">
      <%= partial "partials/ops" %>
    </div>
    <div id="functions">
      <%= partial "partials/funcs" %>
    </div>
    <div id= "numbers">
      <%= partial "partials/numbers" %>
    </div>
  </div>
</section>